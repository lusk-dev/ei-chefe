---
import { MoveUpRight } from '@lucide/astro';

const { className = '' } = Astro.props;
---

<link rel="preload" as="image" href="/images/card.webp" fetchpriority="high" />

<div
  class="flex flex-col gap-4 p-8 rounded-[20px] max-w-[622px] mx-auto"
  style="
    background-image: url(/images/card.webp);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 2rem;
    border-radius: 10px;
    width: 100%;
  "
>
  <div class="flex items-center justify-between gap-4">
    <img
      src="/images/luanderson.webp"
      alt="Luanderson Rodrigues"
      class="flex-shrink-0"
      loading="eager"
      fetchpriority="high"
    />
  </div>
  <div class="flex items-end justify-between">
    <div class="space-y-2 text-white">
      <div class="flex gap-[10px]">
        <span
          class="py-[6px] px-[21px] leading-[21px] text-sm font-normal border border-white/20 rounded-[30px]"
          >Marketing</span
        >
        <span
          class="py-[6px] px-[21px] leading-[21px] text-sm font-normal border border-white/20 rounded-[30px]"
          >AI</span
        >
        <span
          class="py-[6px] px-[21px] leading-[21px] text-sm font-normal border border-white/20 rounded-[30px]"
          >Design</span
        >
      </div>
      <div class="flex flex-col gap-1">
        <p class="leading-[48px] text-[40px] font-medium">
          Luanderson Rodrigues
        </p>
        <p class="text-base leading-[24px] font-normal">eiluanderson</p>
      </div>
    </div>
    <a
      href="https://api.whatsapp.com/send?phone=5588999030508&text=Olá%2C%20quero%20vender%20mais%20com%20anúncios"
      target="_blank"
      rel="noopener noreferrer"
      class="px-[18px] py-[19.39px] border rounded-full border-white/20 text-white max-w-max"
      aria-label="Contatar Luanderson Rodrigues via WhatsApp"
      onclick="return gtag_report_conversion(this.href);"
    >
      <MoveUpRight class="size-3.5" aria-hidden="true" />
    </a>
  </div>
</div>

<script is:inline>
function gtag_report_conversion(url) {
  var callback = function () {
    if (typeof(url) != 'undefined') {
      window.location = url;
    }
  };
  gtag('event', 'conversion', {
      'send_to': 'AW-824780487/68QoCPeiz4sYEMfNpIkD',
      'event_callback': callback,
      'allow_enhanced_conversions': true
  });
  return false;
}
</script>
